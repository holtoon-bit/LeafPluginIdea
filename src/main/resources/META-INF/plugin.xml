<idea-plugin>
    <id>com.leafagent.LeafPlugin</id>
    <name>Leaf</name>
    <vendor email="grishasreason@gmail.com">LeafAgent</vendor>
    <description>
        Leaf Plugin - это плагин для Android Studio, необходимый для отображения дерева вызовов, построенное LeafAgent (см. [holtoon-bit/LeafAgent](https://github.com/holtoon-bit/LeafAgent)).
    </description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.android</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Leaf Agent" secondary="true" icon="/icons/iconLeaf.svg" anchor="right"
                    factoryClass="com.leafagent.plugin.ide.TreeToolWindow"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="Leaf Notification" displayType="BALLOON"/>
    </extensions>
</idea-plugin>